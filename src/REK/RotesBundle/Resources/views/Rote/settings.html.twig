{% extends '::base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block title %}SETTINGS|ROTES{% endblock %}

{% block body %}

  <div class="">
      <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1 id="type">Settings</h1>
                </div>
            </div>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="col-lg-4">
                {{ form(form) }}
            </div>

            <div class="col-lg-4">
              <h2>Extra options</h2>
              <ul>
                <li>
                  <a class="pswd" href="{{ url('fos_user_change_password') }}">Change Password</a>
                </li>
                <li>
                  <a class="profile" href="{{ url('fos_user_profile_edit') }}">Edit profile</a>
                </li>
                <li>
                  <a class="profile" href="{{ url('fos_user_profile_show') }}">View profile</a>
                </li>

              </ul>
            </div>

      </div>

  </div>

{% endblock %}