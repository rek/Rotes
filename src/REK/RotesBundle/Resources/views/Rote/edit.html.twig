{% extends '::base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block title %}ROTES{% endblock %}

{% block body %}

  {# <a class="back" href="{{ url('home') }}"><img src="{{ asset('bundles/rekrotes/images/back.png') }}" /></a> #}
  <div class="">
      <div class="row">
          {{ form_start(form) }}
            <div class="col-lg-12">
                <div class="page-header">
                    <h1 id="type">{{ form.vars.value.name }}</h1>
                    <a href="{{ path('rote_show', { 'slug': rote.slug, 'preview': true }) }}">Preview</a>

                    {{ form_widget(form.save) }}
                </div>
            </div>

            <div class="col-lg-4">
                {{ form_errors(form) }}

                <div class="message">
                    {{ form_errors(form.message) }}
                    {{ form_widget(form.message) }}
                </div>

                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}

            </div>
          {{ form_end(form) }}
      </div>

  </div>

{% endblock %}